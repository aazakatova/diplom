<Window x:Class="Avtoservis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avtoservis"
        mc:Ignorable="d"
       Title="Авторизация" Height="800" Width="850" WindowStartupLocation="CenterScreen" WindowState="Maximized" FontSize="16" FontFamily="Century Gothic">
    <Grid Cursor="">
        <Grid.Background>
            <ImageBrush ImageSource="Images/fon13.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="White" CornerRadius="20" Margin="130, 50, 130, 50" Width="520" Height="650" Padding="20" BorderBrush="#FFDEDEDE" BorderThickness="1">
            <StackPanel Cursor="">
                <Image Height="60" HorizontalAlignment="Left" Margin="0,0,0,0" Source="Images/logo1.png"/>
                <TextBlock HorizontalAlignment="Center" FontSize="25" TextWrapping="Wrap" Text="Вход в систему" FontWeight="Bold" TextAlignment="Left" Margin="0,110,195,0" Width="224" Cursor=""/>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Пожалуйста, войдите в свою учётную запись, чтобы продолжить." Width="420" FontSize="13" TextAlignment="Left" Margin="0,10,0,0" Foreground="#FFADADAD"/>

                <TextBlock Margin="0,20,340,0" TextWrapping="Wrap" Text="Логин" Width="60" HorizontalAlignment="Center"/>
                <TextBox x:Name="TextBoxLogin" Width="420" Height="37" FontSize="15" Padding="8,6,0,0"/>

                <TextBlock Margin="0,20,340,0" TextWrapping="NoWrap" Text="Пароль" Width="60" HorizontalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox" Width="420" Height="37" FontSize="14" Padding="8,6,0,0" Cursor=""/>

                <Button x:Name="ButtonVhod" Content="Войти" Width="420" Height="40" Click="ButtonVhod_Click" Margin="0,30,0,0" Cursor="Hand" Style="{StaticResource LoginButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
